// NMEAGPS_cfg.h
#ifndef NMEAGPS_CFG_H
#define NMEAGPS_CFG_H

// Enable the sentences you want to parse
#define NMEAGPS_PARSE_GGA
#define NMEAGPS_PARSE_RMC
#define NMEAGPS_PARSE_GSA    // Needed for HDOP
#define NMEAGPS_PARSE_GSV    // For satellite info
#define NMEAGPS_PARSE_GLL    // You have GNGLL in your data
#define NMEAGPS_PARSE_VTG    // You have GNVTG in your data
#define NMEAGPS_PARSE_ZDA    // You have GNZDA in your data

// Enable specific fields
#define NMEAGPS_PARSE_HDOP
#define NMEAGPS_PARSE_SATELLITES
#define NMEAGPS_PARSE_DATE
#define NMEAGPS_PARSE_TIME
#define NMEAGPS_PARSE_LOCATION
#define NMEAGPS_PARSE_SPEED
#define NMEAGPS_PARSE_HEADING
#define NMEAGPS_PARSE_ALTITUDE

// CRITICAL: Enable GNSS support for GN-prefixed sentences
#define NMEAGPS_RECOGNIZE_ALL
#define NMEAGPS_DERIVED_TYPES    // Allow derived sentence types
#define NMEAGPS_PARSE_MANUFACTURER_ID  // Parse manufacturer-specific sentences

// Enable multi-constellation support
#define NMEAGPS_PARSE_TALKER_ID   // This is KEY for GN prefix recognition
#define NMEAGPS_PARSE_MFR_ID      // Support manufacturer IDs

// Optional: Increase buffer sizes if you're getting parsing errors
#define NMEAGPS_MAX_SOURCE_ID 5   // Allow more source IDs

#endif